<Window x:Class="Quizmester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizmester"
        mc:Ignorable="d"
        Title="Quizmester" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Black" WindowStyle="None">

    <Grid>
        <!-- Welcome Screen -->
        <Grid x:Name="WelcomeScreen" Visibility="Collapsed">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#9494EC" Offset="0" />
                    <GradientStop Color="#3C3C8C" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20">
                <Border CornerRadius="20"
                        Width="100"
                        Height="100"
                        Background="White">

                    <Button Content="X"
                            Width="100"
                            Height="100"
                            FontSize="72"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Foreground="LightGray"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="ExitApplicationButton"
                            />

                </Border>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Welcome to Quizmester!"
                           FontSize="72"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Stan has three braincells"
                           FontSize="36"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <Button Content="Login"
                        Width="500"
                        Height="100"
                        FontSize="26"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#5A5AFF"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="10"
                        Margin="10" 
                        Click="LoginButton"/>

                <Button Content="Create Account"
                        Width="500"
                        Height="100"
                        FontSize="26"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#5A5AFF"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="10"
                        Margin="10"
                        Click="CreateAccountButton"/>
            </StackPanel>
        </Grid>
        <!-- Login Screen -->
        <Grid x:Name="LoginScreen" Visibility="Collapsed">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#9494EC" Offset="0"/>
                    <GradientStop Color="#3C3C8C" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Border Background="White" 
                    CornerRadius="20" 
                    Padding="30" 
                    Width="350" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Login"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#3C3C8C"
                               HorizontalAlignment="Center"/>

                    <!-- Username -->
                    <StackPanel>
                        <TextBlock Text="Username" 
                                   FontSize="14"
                                   Foreground="Gray"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="UsernameBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="5"
                                 BorderBrush="#9494EC"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel>
                        <TextBlock Text="Password" 
                                   FontSize="14"
                                   Foreground="Gray"
                                   Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Height="35"
                                     FontSize="14"
                                     Padding="5"
                                     BorderBrush="#9494EC"
                                     BorderThickness="1"/>
                    </StackPanel>

                    <!-- Login Button -->
                    <Button Content="Login"
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#5A5AFF"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"
                            Click="InsertLoginButton"/>

                    <Button Content="Back "
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="DarkRed"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"
                            Click="BackButton"/>
                </StackPanel>
            </Border>
        </Grid>
        <!-- create account Screens -->
        <Grid x:Name="CreateAccountScreen" Visibility="Collapsed">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#9494EC" Offset="0"/>
                    <GradientStop Color="#3C3C8C" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Border Background="White" 
                    CornerRadius="20" 
                    Padding="30" 
                    Width="350" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Login"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#3C3C8C"
                       HorizontalAlignment="Center"/>

                    <!-- Username -->
                    <StackPanel>
                        <TextBlock Text="Username" 
                           FontSize="14"
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                        <TextBox x:Name="CreateUsernameBox"
                         Height="35"
                         FontSize="14"
                         Padding="5"
                         BorderBrush="#9494EC"
                         BorderThickness="1"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel>
                        <TextBlock Text="Password" 
                           FontSize="14"
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                        <PasswordBox x:Name="CreatePasswordBox"
                             Height="35"
                             FontSize="14"
                             Padding="5"
                             BorderBrush="#9494EC"
                             BorderThickness="1"/>
                    </StackPanel>

                    <!-- Create Button -->
                    <Button Content="Create"
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#5A5AFF"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"
                            Click="InsertCreateAccountButton"/>

                    <Button Content="Back "
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="DarkRed"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"
                            Click="BackButton"/>
                </StackPanel>
            </Border>
        </Grid>
        <!-- Quiz Choice Screen -->
        <Grid x:Name="QuizChoiceScreen" Visibility="Collapsed">
            <!-- Background on the Grid -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0" />
                    <GradientStop Color="#00003f" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Scrollable content -->
            <ScrollViewer VerticalScrollBarVisibility="Hidden" VerticalAlignment="Top">
                <StackPanel>
                    <!-- Hero section -->
                    <Grid Height="400">
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#9494EC" Offset="0" />
                                <GradientStop Color="#3C3C8C" Offset="1" />
                            </LinearGradientBrush>
                        </Grid.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Choose Your Quiz Adventure"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,20,0,20"/>

                            <TextBlock Text="Select a quiz from the options below:"
                           FontSize="24"
                           Foreground="White"
                           Margin="0,0,0,20"/>
                        </StackPanel>
                    </Grid>

                    <!-- Next block -->
                    <ItemsControl ItemsSource="{Binding QuizChoices}" HorizontalAlignment="Center">
                        <!-- Panel that arranges the items -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate >
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!-- Template for each item -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="15" Background="White">
                                    <StackPanel Width="500">
                                        <TextBlock Text="{Binding QuizTitle}" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                                        <TextBlock Text="{Binding QuizDescription}" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="QuizId" Text="{Binding QuizId}" FontSize="14" Foreground="Gray"/>
                                        <Button Content="Start Quiz"
                                            Width="120"
                                            Height="40"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Background="#5A5AFF"
                                            BorderBrush="Transparent"
                                            Cursor="Hand"
                                            HorizontalAlignment="Center"
                                            Margin="10,20,10,0"
                                            Click="OnStartQuiz"
                                            CommandParameter="{Binding QuizId}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <!-- Quiz screen -->
        <Grid x:Name="QuizScreen" Visibility="Visible">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0" />
                    <GradientStop Color="#00003f" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <ItemsControl ItemsSource="{Binding QuizQuestions}" HorizontalAlignment="Center">
                <!-- Panel that arranges the items -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate >
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Template for each item -->
                        <Border
                            Background="White"
                            CornerRadius="20"
                            Padding="30"
                            Width="350"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                            <!-- Use one container for all content -->
                            <StackPanel>
                                <TextBlock
                                    Text="{Binding QuestionText}"
                                    FontSize="28"
                                    FontWeight="Bold"
                                    Foreground="#3C3C8C"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20"/>

                                <ProgressBar Minimum="0" Maximum="30" Value="20" Height="25">
                                    <ProgressBar.Template>
                                        <ControlTemplate TargetType="ProgressBar">
                                            <Border CornerRadius="12" Background="#E5E5E5">
                                                <Grid>
                                                    <Rectangle x:Name="PART_Track" Fill="#E5E5E5" RadiusX="12" RadiusY="12"/>
                                                    <Rectangle x:Name="PART_Indicator" 
                                                               Fill="#9494EC" 
                                                               RadiusX="12" RadiusY="12" 
                                                               HorizontalAlignment="Left"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsIndeterminate" Value="True">
                                                    <Setter TargetName="PART_Indicator" Property="Fill" Value="LightGray"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ProgressBar.Template>
                                </ProgressBar>

                                <Button
                                     Content="{Binding QuizAnswerOne}"
                                     Width="120"
                                     Height="40"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="White"
                                     Background="#5A5AFF"
                                     BorderBrush="Transparent"
                                     Cursor="Hand"
                                     HorizontalAlignment="Center"
                                     Margin="10,20,10,0"
                                     Click="OnStartQuiz"
                                     CommandParameter="{Binding QuizAnswerOne}"/>
                                <Button
                                     Content="{Binding QuizAnswerTwo}"
                                     Width="120"
                                     Height="40"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="White"
                                     Background="#5A5AFF"
                                     BorderBrush="Transparent"
                                     Cursor="Hand"
                                     HorizontalAlignment="Center"
                                     Margin="10,20,10,0"
                                     Click="OnStartQuiz"
                                     CommandParameter="{Binding QuizAnswerTwo}"/>
                                <Button
                                     Content="{Binding QuizAnswerThree}"
                                     Width="120"
                                     Height="40"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="White"
                                     Background="#5A5AFF"
                                     BorderBrush="Transparent"
                                     Cursor="Hand"
                                     HorizontalAlignment="Center"
                                     Margin="10,20,10,0"
                                     Click="OnStartQuiz"
                                     CommandParameter="{Binding QuizAnswerThree}"/>
                                <Button
                                     Content="{Binding QuizAnswerFour}"
                                     Width="120"
                                     Height="40"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="White"
                                     Background="#5A5AFF"
                                     BorderBrush="Transparent"
                                     Cursor="Hand"
                                     HorizontalAlignment="Center"
                                     Margin="10,20,10,0"
                                     Click="OnStartQuiz"
                                     CommandParameter="{Binding QuizAnswerFour}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Grid x:Name="AdminScreen" Visibility="Collapsed"/>


    </Grid>
</Window>
