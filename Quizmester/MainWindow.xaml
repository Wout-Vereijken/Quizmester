<Window x:Class="Quizmester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizmester"
        mc:Ignorable="d"
        Title="Quizmester" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Black" WindowStyle="None">

    <Grid>
        <!-- Welcome Screen -->
        <Grid x:Name="WelcomeScreen" Visibility="Visible">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#9494EC" Offset="0" />
                    <GradientStop Color="#3C3C8C" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20">
                <Border CornerRadius="20"
                        Width="100"
                        Height="100"
                        Background="White">

                    <Button Content="X"
                            Width="100"
                            Height="100"
                            FontSize="72"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Foreground="LightGray"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="ExitApplicationButton"
                            />
                    
                </Border>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Welcome to Quizmester!"
                           FontSize="72"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Stan has three braincells"
                           FontSize="36"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <Button Content="Login"
                        Width="500"
                        Height="100"
                        FontSize="26"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#5A5AFF"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="10"
                        Margin="10" 
                        Click="LoginButton"/>

                <Button Content="Create Account"
                        Width="500"
                        Height="100"
                        FontSize="26"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#5A5AFF"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="10"
                        Margin="10"
                        Click="CreateAccountButton"/>
            </StackPanel>
        </Grid>

        <!-- Login Screen -->
        <Grid x:Name="LoginScreen" Visibility="Collapsed">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#9494EC" Offset="0"/>
                    <GradientStop Color="#3C3C8C" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Border Background="White" 
                    CornerRadius="20" 
                    Padding="30" 
                    Width="350" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Login"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#3C3C8C"
                               HorizontalAlignment="Center"/>

                    <!-- Username -->
                    <StackPanel>
                        <TextBlock Text="Username" 
                                   FontSize="14"
                                   Foreground="Gray"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="UsernameBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="5"
                                 BorderBrush="#9494EC"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel>
                        <TextBlock Text="Password" 
                                   FontSize="14"
                                   Foreground="Gray"
                                   Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Height="35"
                                     FontSize="14"
                                     Padding="5"
                                     BorderBrush="#9494EC"
                                     BorderThickness="1"/>
                    </StackPanel>

                    <!-- Login Button -->
                    <Button Content="Login"
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#5A5AFF"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"/>

                    <Button Content="Back "
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="DarkRed"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"
                            Click="BackButton"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Other Screens -->
        <Grid x:Name="CreateAccountScreen" Visibility="Collapsed">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#9494EC" Offset="0"/>
                    <GradientStop Color="#3C3C8C" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Border Background="White" 
                    CornerRadius="20" 
                    Padding="30" 
                    Width="350" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Login"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#3C3C8C"
                       HorizontalAlignment="Center"/>

                    <!-- Username -->
                    <StackPanel>
                        <TextBlock Text="Username" 
                           FontSize="14"
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                        <TextBox x:Name="CreateUsernameBox"
                         Height="35"
                         FontSize="14"
                         Padding="5"
                         BorderBrush="#9494EC"
                         BorderThickness="1"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel>
                        <TextBlock Text="Password" 
                           FontSize="14"
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                        <PasswordBox x:Name="CreatePasswordBox"
                             Height="35"
                             FontSize="14"
                             Padding="5"
                             BorderBrush="#9494EC"
                             BorderThickness="1"/>
                    </StackPanel>

                    <!-- Create Button -->
                    <Button Content="Create"
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#5A5AFF"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"
                            Click="InsertCreateAccountButton"/>

                    <Button Content="Back "
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="DarkRed"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"
                            Click="BackButton"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="QuizScreen" Visibility="Collapsed"/>
        <Grid x:Name="AdminScreen" Visibility="Collapsed"/>
    </Grid>
</Window>
